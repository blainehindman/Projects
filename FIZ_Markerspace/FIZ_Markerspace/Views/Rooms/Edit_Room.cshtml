@model FIZ_Markerspace.Models.Room

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var room_id = Model.room_id;
    var room_name = Model.room_name;
}

<h2>Edit</h2>



<form id="Create_Room">
    <br />
    <label for="room_name">Room Name</label>
    <input id="room_name" name="wsu_name" value="@room_name"class="form-control" type="text" />
    <br />
    <input id="room_submit" type="button" value="Submit"/>
</form>

<div>
    @Html.ActionLink("Back to List", "View_Rooms")
</div>


<script>
    $(document).ready(function () {
        $("#room_submit").click(function (event) {
            //Room Data
            var ROOM_ID = "@room_id"
            var ROOM_NAME = $("#room_name").val();

            $.ajax({
                type: "POST",
                url: '@Url.Action("Edit_Room")',
                data: JSON.stringify({
                    //Room Data
                    ROOM_ID: ROOM_ID, ROOM_NAME: ROOM_NAME
                }),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    swal({
                        title: "Room Updated!",
                        text: "You updated " + ROOM_NAME + "!",
                        icon: "success",
                    });
                },
                error: function (data) {
                    swal({
                        title: "Error!",
                        text: "There was a problem updating your data, check your inputs!",
                        icon: "warning",
                    });
                },
            });
        });
    });
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}