@model CodeWidgitCore.Models.WidgitViewModel

@{
    ViewData["Title"] = "Edit";
}

<h4>Widgit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Widgit.WidgitName" class="control-label"></label>
                <input asp-for="Widgit.WidgitName" class="form-control" placeholder="@Model.Widgit.WidgitName" />
                <span asp-validation-for="Widgit.WidgitName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Widgit.WidgitDescription" class="control-label"></label>
                <input asp-for="Widgit.WidgitDescription" class="form-control"  placeholder="@Model.Widgit.WidgitDescription"/>
                <span asp-validation-for="Widgit.WidgitDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WidgitContent.WidgitFile" class="control-label"></label>
                <textarea asp-for="WidgitContent.WidgitFile" class="form-control" placeholder="@Model.WidgitContent.WidgitFile"></textarea>
                <span asp-validation-for="WidgitContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
